    <fields name="params" >
		<fieldset name="basic" label="選項" addfieldpath="/administrator/components/com_surveyforce/models/fields">
			<field name="vote_cat" type="list" label="類別" default="0">
				<option value="0">待投票</option>
				<option value="1">進行中</option>
				<option value="2">已結束</option>
